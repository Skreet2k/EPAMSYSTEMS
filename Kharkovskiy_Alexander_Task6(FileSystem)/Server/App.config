<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="loggerSetting" type="Infrastructure.LoggingToDB.LoggingConfigSection, Infrastructure" />
  </configSections>
  <loggerSetting messageBufferSize="1">

    <connectionStrings>
      <add name="LoggingDB"
                 connectionString="Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\LoggingDB.mdf"
        providerName="System.Data.SqlClient" />
    </connectionStrings>
  </loggerSetting>
  <system.diagnostics>
    <trace>
      <listeners>
        <add name="myListener" type="Infrastructure.LoggingToDB.DbTraceListener, Infrastructure" initializeData="loggerSetting" />
      </listeners>
    </trace>
  </system.diagnostics>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>